{
	"name": "workspace-booking-backend",
	"version": "1.0.0",
	"description": "Sistema de gestiÃ³n de workspace-booking - API Backend",
	"main": "dist/main.js",
	"scripts": {
		"dev": "tsx watch src/main.ts",
		"build": "tsc && tsc-alias",
		"postinstall": "prisma generate",
		"start": "yarn railway:check && node dist/main.js",
		"start:dev": "node dist/main.js",
		"start:prod": "NODE_ENV=production yarn railway:setup && node dist/main.js",
		"railway:setup": "prisma migrate deploy && prisma generate && yarn railway:seed",
		"railway:check": "tsx scripts/railway-check.ts",
		"railway:seed": "tsx prisma/seed.ts",
		"railway:build": "yarn build",
		"railway:reset": "prisma migrate reset --force",
		"railway:studio": "prisma studio",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/**/*.ts tests/**/*.ts",
		"lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write src/**/*.ts tests/**/*.ts",
		"format:check": "prettier --check src/**/*.ts tests/**/*.ts",
		"quality": "yarn typecheck && yarn lint && yarn test",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy",
		"prisma:seed": "tsx prisma/seed.ts",
		"db:verify": "tsx scripts/verify-database.ts",
		"docker:build": "docker build -t workspace-booking-api .",
		"docker:run": "docker run -p 3000:3000 workspace-booking-api"
	},
	"keywords": [
		"fastify",
		"typescript",
		"hexagonal",
		"prisma",
		"workspace-booking"
	],
	"author": "Mariano Zamora",
	"license": "MIT",
	"dependencies": {
		"@fastify/cors": "^8.4.0",
		"@fastify/swagger": "^8.12.0",
		"@fastify/swagger-ui": "^2.0.0",
		"@prisma/client": "^5.6.0",
		"date-fns": "^2.30.0",
		"fastify": "^4.24.3",
		"node-fetch": "^3.3.2",
		"pino": "^8.16.1",
		"tsconfig-paths": "^4.2.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^20.9.0",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"eslint": "^8.54.0",
		"jest": "^29.7.0",
		"pino-pretty": "^10.2.3",
		"prettier": "^3.6.2",
		"prisma": "^5.6.0",
		"supertest": "^7.1.4",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.8",
		"tsx": "^4.1.0",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=20.0.0",
		"yarn": ">=1.22.0"
	}
}
